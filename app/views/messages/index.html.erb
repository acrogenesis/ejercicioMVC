<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>From</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.to %></td>
        <td><%= message.from %></td>
        <td><%= message.message.truncate(20) %></td>
        <td><%= link_to 'Show', message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>
